{pre_hooks, [
    {"(darwin|solaris)", compile, "make -C c_src"},
    {"linux", compile, "make -C c_src _CFLAGS='-D_BSD_SOURCE -D_DEFAULT_SOURCE'"},
    {"(freebsd|openbsd|netbsd)", compile, "gmake -C c_src"}
]}.

{post_hooks, [
    {"(linux|darwin|solaris)", clean, "make -C c_src clean"},
    {"(freebsd|openbsd|netbsd)", clean, "gmake -C c_src clean"}
]}.

{dialyzer, [
    {warnings, [
        unmatched_returns,
        error_handling,
        race_conditions,
        underspecs
    ]}
]}.

{xref_checks, [
    undefined_function_calls
]}.
